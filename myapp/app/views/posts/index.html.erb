
<% if user_signed_in? %>

<h1> Listing posts </h1>

<%= link_to 'New Post', new_post_path %>

<table border="2">
 <tr>
  <th>Title</th>
  <th>Text</th>
 </tr>

 <% @posts.each do |post| %>
 <tr>
  <td><%= post.title %></td>
  <td><%= post.text %></td>
  <td><%= link_to 'Show', post %></td>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
 </tr>
 <% end %>
</table>i

